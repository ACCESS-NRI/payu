#!/usr/bin/env python

# Force Python version
from payu import reversion
reversion.repython('2.7.5', __file__)

# Standard library
import os

# Local
import payu.model


#---
def payu_collate(model_name):

    model = payu.model.index[model_name]
    expt = model()
    expt.collate()

    if expt.postscript:
        expt.postprocess()


#---
if __name__ == '__main__':

    model_name = os.environ.get('PAYU_MODEL')
    payu_collate(model_name)

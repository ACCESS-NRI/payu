#!/usr/bin/env python

import argparse
import os
import payu
import sys

# TODO: How to move this to payu.py?
model_index = {'mom': payu.Mom,
               'mom4': payu.mom4,
               'mitgcm': payu.mitgcm,
               'gold': payu.gold}


def payu_collate(model_name):

    model = model_index[model_name]
    expt = model()
    expt.collate()


if __name__ == '__main__':

    model_name = os.environ.get('PAYU_MODEL')
    payu_collate(model_name)
